<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNomePilarItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter18pt_extra_bold"
            android:textSize="22sp"
            tools:text="Nome do Pilar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutAcoes" />

        <TextView
            android:id="@+id/tvDescricaoPilarItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inria_sans_regular"
            tools:text="Descrição detalhada do pilar."
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNomePilarItem"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutAcoes" />

        <TextView
            android:id="@+id/tvDataInicioPilarItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inria_sans_regular"
            tools:text="Início: 01/01/2025"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescricaoPilarItem"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutAcoes" />

        <TextView
            android:id="@+id/tvDataTerminoPilarItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inria_sans_regular"
            tools:text="Término: 31/12/2025"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDataInicioPilarItem"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutAcoes" />

        <TextView
            android:id="@+id/tvPercentualPilarItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inria_sans_regular"
            tools:text="Percentual: 50.00%"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDataTerminoPilarItem"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutAcoes" />

        <TextView
            android:id="@+id/tvAprovadoPilarItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inria_sans_regular"
            tools:text="Aprovado"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPercentualPilarItem"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutAcoes" />

        <LinearLayout
            android:id="@+id/linearLayoutAcoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnEditarPilar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#FE9A22"
                android:text="Editar"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnExcluirPilar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#9A1515"
                android:text="Excluir"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>